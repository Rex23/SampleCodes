class BrowserHistory {
    
    List <String> webpages = new ArrayList <String>();
    
    int capacity = 0, cur = 0;

    public BrowserHistory(String homepage) {
        webpages.add(homepage);
        capacity = 1;
    }
    
    public void visit(String url) {        
        
        webpages.add(cur + 1, url);
        cur = cur + 1;
        webpages.subList(cur + 1, webpages.size()).clear(); //corresponds to C++ resize!
    }
    
    public String back(int steps) {
        
        if (cur - steps < 0)
        {
            cur = 0;
            return webpages.get(cur);
        }
        
        cur -= steps;
        return webpages.get(cur);
    }
    
    public String forward(int steps) {
                
        if (cur + steps >= webpages.size())
        {
            cur = webpages.size() - 1;
            return webpages.get(cur);
        }
        
        cur += steps;
        return webpages.get(cur);
    }
}
